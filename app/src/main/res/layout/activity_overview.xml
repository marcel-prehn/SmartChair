<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_overview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:keepScreenOn="true"
    tools:context="uni.marcel.smartchair.Overview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgOverview"
        android:background="@color/lightGrey">

        <TextView
            android:text="@string/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimer"
            android:textSize="15sp"
            android:padding="0dp"
            android:textAlignment="center"/>

        <TextView
            android:text="@string/overviewAdviceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAdviceTitle"
            android:textSize="20sp"
            android:padding="5dp" />

        <TextView
            android:text="@string/overviewAdviceText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAdviceText"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <ImageView
        android:src="@drawable/smartchair_overview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgOverview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="00 Nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad1"
        android:layout_alignBaseline="@+id/tvLoad0"
        android:layout_alignBottom="@+id/tvLoad0"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="00 Nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="00 Nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="00 Nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad7"
        android:layout_below="@+id/tvLoad4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="00 Nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad5"
        android:layout_below="@+id/tvLoad3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="00 Nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad3"
        android:layout_below="@+id/tvLoad0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBlank"
        android:text="                "
        android:layout_below="@+id/tvLoad1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="00 Nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad6"
        android:layout_below="@+id/tvBlank"
        android:layout_alignLeft="@+id/tvLoad1"
        android:layout_alignStart="@+id/tvLoad1" />

    <TextView
        android:text="00 Nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoad4"
        android:layout_below="@+id/tvLoad2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
